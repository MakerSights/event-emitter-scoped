    "@nestjs/core": "^9.4.3",
    "@nestjs/platform-express": "^9.4.3",
    "@nestjs/testing": "^9.4.3",
    "@types/jest": "30.0.0",
    "@types/node": "16.11.41",
    "@typescript-eslint/eslint-plugin": "8.45.0",
    "@typescript-eslint/parser": "8.45.0",
    "eslint": "9.36.0",
